CUPS_CONFIG_FILE_PERM = @CUPS_CONFIG_FILE_PERM@
CUPS_CUPSD_FILE_PERM = @CUPS_CUPSD_FILE_PERM@
CUPS_LOG_FILE_PERM = @CUPS_LOG_FILE_PERM@

#
# Languages to install...
#

LANGUAGES	=	@LANGUAGES@
INSTALL_LANGUAGES =	@INSTALL_LANGUAGES@
